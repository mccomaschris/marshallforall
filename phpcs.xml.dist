<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
    <description>WordPress Coding Standards for the MFA theme</description>

    <!-- Use WordPress coding standards -->
    <rule ref="WordPress"/>
    <rule ref="WordPress-Core"/>
    <rule ref="WordPress-Docs"/>
    <rule ref="WordPress-Extra"/>

    <!-- Check PHP 8.1+ compatibility -->
    <config name="testVersion" value="8.1-"/>

    <!-- Paths to scan (Bedrock structure) -->
    <file>web/app/themes/mfa</file>

    <!-- Exclude patterns -->
    <exclude-pattern>web/app/themes/mfa/vendor/*</exclude-pattern>
    <exclude-pattern>web/app/themes/mfa/node_modules/*</exclude-pattern>
    <exclude-pattern>web/app/themes/mfa/assets/*</exclude-pattern>
    <exclude-pattern>web/app/themes/mfa/styles/*</exclude-pattern>
    <exclude-pattern>web/app/themes/mfa/views/*</exclude-pattern>
    <exclude-pattern>web/app/themes/mfa/acf-json/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
</ruleset>
