<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
    <description>WordPress Coding Standards for the MFA theme</description>

    <!-- Use WordPress coding standards -->
    <rule ref="WordPress"/>
    <rule ref="WordPress-Core"/>
    <rule ref="WordPress-Docs"/>
    <rule ref="WordPress-Extra"/>

    <!-- Check PHP 8.1+ compatibility -->
    <config name="testVersion" value="8.1-"/>

    <!-- Paths to scan (now relative to theme root) -->
    <file>.</file>

    <!-- Exclude patterns -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>assets/*</exclude-pattern>
    <exclude-pattern>styles/*</exclude-pattern>
    <exclude-pattern>views/*</exclude-pattern>
    <exclude-pattern>acf-json/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
</ruleset>
