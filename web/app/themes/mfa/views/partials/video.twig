<div class="aspect-w-16 aspect-h-9">
	<a href="https://www.youtube.com/watch?v={{ video.youtube_id }}" target="_blank" class="relative group block w-full shadow-xl">
		{% if video.placeholder_image %}
			<img src="{{ video.placeholder_image.url|resize('1920x1080') }}" class="object-cover" alt="{{ video.placeholder_image.alt }}" />
		{% else %}
			<img src="https://img.youtube.com/vi/{{ video.youtube_id }}/maxresdefault.jpg" class="object-cover" alt="YouTube Video Placeholder" />
		{% endif %}

		<div class="absolute inset-0 bg-linear-to-t from-gray-900/50 to-gray-900/0"></div>

		<div class="absolute bottom-0 left-0 px-4 pb-4 lg:pl-6 lg:pb-6 z-5 flex gap-4 items-center w-full">
			<div class="flex items-center justify-center bg-transparent h-12 w-12 md:h-14 md:w-14 ring-2 ring-green rounded-full group-hover:ring-white transition-all duration-150 ease-linear">
				<div class="bg-green rounded-full h-10 w-10 md:h-12 md:w-12 flex items-center justify-center group-hover:bg-white transition-all duration-150 ease-linear">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 md:size-6 fill-white group-hover:fill-green transition-all duration-150 ease-linear"><path fill-rule="evenodd" d="M4.5 5.653c0-1.427 1.529-2.33 2.779-1.643l11.54 6.347c1.295.712 1.295 2.573 0 3.286L7.28 19.99c-1.25.687-2.779-.217-2.779-1.643V5.653Z" clip-rule="evenodd" /></svg>
				</div>
			</div>

			<div class="flex-1 text-lg lg:text-3xl font-bold text-white transition-all duration-150 ease-linear">
				<span class="animate-text">
					{{ video.video_title }}
				</span>
			</div>
		</div>
	</a>
</div>
