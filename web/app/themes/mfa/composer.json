{
  "name": "marshallu/mfa",
  "description": "Marshall For All Theme",
  "type":"wordpress-theme",
  "license": "MIT",
  "require": {
	"nesbot/carbon": "^2.71",
    "timber/timber": "^2.1"
  },
  "require-dev": {
   "squizlabs/php_codesniffer": "@stable",
    "wp-coding-standards/wpcs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "php-stubs/acf-pro-stubs": "^6.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/phpstan": "^2.0",
    "szepeviktor/phpstan-wordpress": "^2.0"
  },
  "scripts": {
	"format": "phpcbf  --extensions=php --standard=phpcs.xml.dist --report-summary --report-source",
	"lint": "phpcs --extensions=php --standard=phpcs.xml.dist",
	"analyse": "phpstan analyse",
	"twig-lint": "find views -name '*.twig' -exec php -l {} \\;"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
